<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="28px"
    android:padding="20dp"
    android:background="@drawable/question_list_background">


    <LinearLayout
        android:id="@+id/search_item_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/search_item_profile_iv"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_profile"/>

        <TextView
            android:id="@+id/search_item_nickname_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="이휘정"
            android:textStyle="bold"
            android:textColor="@color/home_gray_text_color"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/search_item_profile_iv"/>

        <TextView
            android:id="@+id/search_item_date_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="12/30,20"
            android:textStyle="bold"
            android:textColor="@color/home_gray_text_color"
            android:layout_gravity="center_vertical"
            android:layout_toRightOf="@id/search_item_profile_iv" />
    </LinearLayout>




    <LinearLayout
        android:id="@+id/search_item_comment_like_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/search_item_ly"
        app:layout_constraintBottom_toBottomOf="@+id/search_item_ly"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/search_item_comment_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_message"/>

        <TextView
            android:id="@+id/search_item_comment_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:text="3"/>


        <ImageView
            android:id="@+id/search_item_like_iv"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/ic_like"/>

        <TextView
            android:id="@+id/search_item_like_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:text="10"/>
    </LinearLayout>


    <TextView
        android:id="@+id/search_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="함수 호출 부분을 모르겠어요"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_item_ly"/>


    <TextView
        android:id="@+id/search_item_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="함수 호출 부분을 모르겠는데 이게 왜 ㅇㄹㅇㄴㄹ
ㅇㄹㄴㅇㄹㅇㄹㅇㄴㄹㅇㄹㅇㄹㅇㄹ"
        android:textSize="16sp"
        android:textColor="@color/home_gray_text_color"
        android:lines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_item_title_tv"/>

    <LinearLayout
        android:id="@+id/search_item_tag_ly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_item_content_tv">

        <TextView
            android:id="@+id/search_item_tag1_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#서버"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/home_gray_text_color"/>

        <TextView
            android:id="@+id/search_item_tag2_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="#SPRING"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/home_gray_text_color"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>